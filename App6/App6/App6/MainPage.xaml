        <StackLayout Margin=" 30,20" Spacing="30" Orientation="Vertical">
            <Button BackgroundColor="Black" CornerRadius="20" TextColor="White" Clicked="NewEventHandler" Text="MakePayment" VerticalOptions="CenterAndExpand"/>
            <Button BackgroundColor="Black" CornerRadius="20" TextColor="White" Clicked="GetCustomerInformationID" Text="GetCustomerbyID" VerticalOptions="CenterAndExpand"/>
